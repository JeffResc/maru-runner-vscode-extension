{
  "name": "maru-runner-tasks",
  "displayName": "Maru Runner Tasks",
  "description": "Detect and run Maru Runner tasks as native VSCode tasks",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "maru",
    "runner",
    "tasks",
    "automation",
    "build"
  ],
  "activationEvents": [
    "workspaceContains:**/tasks.yaml",
    "workspaceContains:**/tasks.yml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "maru-runner.refreshTasks",
        "title": "Refresh Maru Tasks",
        "icon": "$(refresh)"
      },
      {
        "command": "maru-runner.runTask",
        "title": "Run Maru Task"
      },
      {
        "command": "maru-runner.runTaskFromFile",
        "title": "Run Maru Task from File"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "maru-runner.refreshTasks",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "maru",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The Maru task to run"
          },
          "file": {
            "type": "string",
            "description": "Path to the tasks.yaml file"
          },
          "args": {
            "type": "array",
            "description": "Additional arguments to pass to the task"
          }
        }
      }
    ],
    "configuration": {
      "title": "Maru Runner",
      "properties": {
        "maru-runner.executable": {
          "type": "string",
          "description": "Path to the maru runner executable. If not specified, will try 'uds run' first, then fallback to 'run'"
        },
        "maru-runner.autoDetect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect and create tasks from tasks.yaml files"
        },
        "maru-runner.taskFiles": {
          "type": "array",
          "default": [
            "tasks.yaml",
            "tasks.yml"
          ],
          "description": "Filenames to search for Maru task definitions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/node": "^22.x",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "yaml": "^2.8.0"
  }
}
